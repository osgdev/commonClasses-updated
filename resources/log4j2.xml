<?xml version="1.0" encoding="UTF-8"?>

<Configuration>

     <Appenders>
       <Console name="console" target="SYSTEM_OUT">
         <PatternLayout pattern="%d{dd-MM-yy HH:mm:ss} [%-5level] %c{3} - %msg%ex{short}%n" />
       </Console>
       <File name="file">
         <Append>false</Append>
         <FileName>c:/logs/common.log</FileName>
         <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss} [%-5level] %c{3} - %msg%ex{short}%n" />
       </File>
    </Appenders>
    
    <Loggers>
		<Logger name="uk.gov.dvla.osg" level="all">
			<AppenderRef ref="file" level="all" />
		</Logger>
        <Root level="all">
			<AppenderRef ref="console" level="all"/>
		</Root>
    </Loggers>
    
</Configuration>